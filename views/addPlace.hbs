{{>navbar}}

<form action="/addPlace" method="post" enctype="multipart/form-data">
{{#if placeError}}
<span class="warning">{{placeError}}</span>
{{/if}}
  <div class="field">
    <label class="label">Nome do lugar</label>
    <div class="control">
      <input class="input" type="text" name="newPlace" placeholder="Text input">
    </div>
  </div>

  <div class="field">
    <label class="label">Foto</label>
    <div class="control">
      <input class="input" type="file" name="newImage">
    </div>
  </div>

  <div class="field">
    <label class="label">Endereço</label>
    <div class="control has-icons-left has-icons-right">
      <input class="input is-success" type="text" name="newAdress" placeholder="Text input">
      <span class="icon is-small is-left">
      </span>
      <span class="icon is-small is-right">
      </span>
    </div>
  </div>

  <div class="field">
    <label class="label">Site</label>
    <div class="control has-icons-left has-icons-right">
      <input class="input is-danger" type="text" name="newSite" placeholder="Site input">
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-exclamation-triangle"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Categoria</label>
    <div class="control">
      <div class="select">
        <select name="newCategory">
          <option value="restaurantes">Restaurante</option>
          <option value="hoteis">Hotel</option>
          <option value="passeios">Passeio</option>
        </select>
      </div>
    </div>
  </div>

  <div class="field">
    <label class="label">Estado</label>
    <div class="control">
      <div class="select">
        <select>
          <option>Select dropdown</option>
          <option>With options</option>
        </select>
      </div>
    </div>
  </div>
  <div class="field">
    <label class="label">Cidade</label>
    <div class="control">
      <div class="select">
        <select>
          <option>Select dropdown</option>
          <option>With options</option>
        </select>
      </div>
    </div>
  </div>

  <div class="field">
    <label class="label">Comentários</label>
    <div class="control">
      <textarea class="textarea" name="newDescription" placeholder="Textarea"></textarea>
    </div>
  </div>


<div class="field">
  <div class="control">
    <label class="checkbox">
      <input type="checkbox">
      Quero receber atualizações sobre essa sugestão
    </label>
  </div>
</div>

<div class="field is-grouped">
  <div class="control">
    <button type="submit" class="button is-danger">Enviar</button>
  </div>
  <div class="control">
    <button class="button is-danger is-light">Cancelar</button>
  </div>
</div>
</form>

{{>footer}}