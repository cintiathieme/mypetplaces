{{>navbar}}

<div class="addplace_container">

  <form action="/addPlace" method="post" enctype="multipart/form-data">
    {{#if placeError}}
    <span class="warning">{{placeError}}</span>
    {{/if}}

    <div class="field">
      <label class="label">Nome do lugar</label>
      <div class="control">
        <input class="input" type="text" name="newPlace" placeholder="Text input">
      </div>
    </div>

    <div class="field">
      <label class="label">Foto</label>
      <div class="control">
        <input class="input" type="file" name="placeImage">
      </div>
    </div>

    <div class="field">
      <label class="label">Endereço</label>
      <div class="control">
        <input id="input_address" class="input" type="text" name="placeAddress" placeholder="Endereço">
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label class="label">Cidade</label>
        <input class="input" type="text" name="placeCity" placeholder="Cidade">
      </div>
    </div>

    <div class="field">
      <label class="label">Estado</label>
      <div class="control">
        <input id="input_state" class="input" type="text" name="placeState" placeholder="Estado">
      </div>
    </div>

    <div class="field">
      <label class="label">CEP</label>
      <div class="control">
        <input id="input_cep" class="input" type="text" name="placeZipCode" placeholder="Insira o CEP do lugar">
      </div>
    </div>

    <div class="field">
      <label class="label">Categoria</label>
      <div class="control">
        <div class="select">
          <select name="placeCategory">
            <option value="restaurantes">Restaurante</option>
            <option value="hoteis">Hotel</option>
            <option value="passeios">Passeio</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label">Site</label>
      <div class="control">
        <input class="input" type="text" name="placeSite" placeholder="Insira o site do lugar">
      </div>
    </div>

    <div class="field">
      <label class="label">Comentários</label>
      <div class="control">
        <textarea class="textarea" placeholder="Insira um comentário se desejar" name="placeDescription"></textarea>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label class="checkbox">
          <input type="checkbox">
          Quero receber atualizações sobre essa sugestão
        </label>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button type="submit" class="button is-danger">Enviar</button>
      </div>
      <div class="control">
        <button class="button is-danger is-light">Cancelar</button>
      </div>
    </div>
  </form>

</div>

{{>footer}}

