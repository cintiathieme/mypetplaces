{{>navbar}}

<form action="/login" method="post" class="box">
{{#if emptyField}}
    <span class="warning">{{emptyField}}</span>
  {{/if}}  
  {{#if errorLogin}}
    <span class="warning">{{errorLogin}}</span>
  {{/if}}  
  <div class="field">
    <p class="control">
      <input class="input" type="email" name="userEmail" placeholder="Insira seu email">
    </p>
  </div>
  <div class="field">
    <p class="control">
      <input class="input" type="password" name="userPassword" placeholder="Insira sua senha">
    </p>
  </div>
  <div class="field">
    <p class="control">
      <button type="submit" class="button is-danger">
        Login
      </button>
    </p>
  </div>
</form>

{{>footer}}

